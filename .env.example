# Evolution API Configuration
EVOLUTION_API_URL=https://your-evolution-api-domain.com
EVOLUTION_API_KEY=your-api-key-here
EVOLUTION_INSTANCE_NAME=your-instance-name

# n8n Configuration
N8N_HOST=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Qdrant Configuration (for vector storage)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=appointments

# OpenAI Configuration (for AI responses)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Business Configuration
BUSINESS_NAME=Your Business Name
BUSINESS_TIMEZONE=Europe/Madrid
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# Appointment Configuration
APPOINTMENT_DURATION_MINUTES=30
MIN_ADVANCE_BOOKING_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=30

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-url.com/appointments
WEBHOOK_SECRET=your-webhook-secret

# Logging
LOG_LEVEL=info
